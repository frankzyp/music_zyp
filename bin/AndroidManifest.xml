<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.music_zyp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:name="com.example.music_zyp.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/music"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.music_zyp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.music_zyp.MusicPlayActivity"
            android:label="@string/app_name" >
        </activity>
        
        <service
            android:name="com.example.music_zyp.MusicPlayService"
            android:enabled="true" />
    </application>

</manifest>